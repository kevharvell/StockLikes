<h1>Stocks</h1>
<h3>Add a new gaming company stock:</h3>
<form id="addstock" action="/stocks" method="post">
    Gaming Company: <select class="m-2" name="gaming_company">
        \{{#each gaming_company}}
            <option value="{{id}}">\{{comp_name}}</option>
        \{{/each}}
    </select> <br>
    Ticker Symbol: <input type="text" class="m-2" name="ticker" autocapitalize="characters"><br>
    Date: <input type="date" class="m-2" name="date"><br>
    <!-- Need to write JS that will validate closing price to 2 decimals -->
    Closing Price: <input type="number" class="m-2" name="price_close" min="0" step="0.01"><br>
    <br>
    <input type="submit" value="Submit">
</form>
<hr/>
<h3>Current Stocks:</h3>
<table class="table table-dark bg-secondary">
    <thead> 
        <th>Company Name</th> 
        <th>Ticker Symbol</th>
        <th>Date</th>
        <th>Closing Price</th>
    </thead> 
    <tbody> 
        \{{#each stock}} 
            <tr> 
                <td>\{{companyID}}</td>
                <td>\{{ticker}}</td>
                <td>\{{date}}</td>
                <td>\{{price_close}}</td> 
                <td>
                    <button class="btn btn-danger" onclick="deleteCompany({{id}})">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                    <a class="btn btn-info" href="/gaming_companies/{{id}}" role="button"><i class="fas fa-edit"></i></a>
                </td>
            </tr> 
        \{{/each}} 
    </tbody> 
</table> 

