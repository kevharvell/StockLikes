<h1>Stocks</h1>
<h3>Add a new gaming company stock:</h3>
<form id="addstock" action="/stocks" method="post">
    Gaming Company: <select class="m-2" name="gaming_companyInput" required>
        {{#each gaming_company}}
            <option value="{{id}}">{{comp_name}}</option>
        {{/each}}
    </select> <br>
    Ticker Symbol: <input type="text" class="m-2" name="tickerInput" autocapitalize="characters" required><br>
    Date: <input type="date" class="m-2" name="dateInput" required><br>
    Closing Price: <input type="number" class="m-2" name="price_closeInput" min="0" step="0.01"><br>
    <br>
    <input type="submit" value="Submit">
</form>

<hr/>
<div id="update" class="hidden">
    <a id="#update">
    <h3>Update Stock</h3>
    <form id="updateStock" method="post">
        Gaming Company: <select id="companyUpdate" class="m-2" name="gaming_companyInput" required>
        {{#each gaming_company}}
            <option value="{{id}}">{{comp_name}}</option>
        {{/each}}
        </select> <br>
        Ticker Symbol: <input type="text" id="tickerUpdate" class="m-2" name="tickerInput" autocapitalize="characters" required><br>
        Date: <input type="date" id="dateUpdate" class="m-2" name="dateInput" required><br>
        Closing Price: <input type="number" id="priceUpdate" class="m-2" name="price_closeInput" min="0" step="0.01"><br>
        <br>
        <input type="submit" value="Update" />
        <button type="button" id="cancelUpdate" onClick="hideUpdate()">Cancel</button>
    </form>
</div>

<hr/>
<h3>Current Stocks:</h3>
<table class="table table-dark bg-secondary">
    <thead> 
        <th>Company Name</th> 
        <th>Ticker Symbol</th>
        <th>Date</th>
        <th>Closing Price</th>
    </thead> 
    <tbody> 
        {{#each stock}} 
            <tr id="tr{{id}}"> 
                <td>{{comp_name}}</td>
                <td>{{ticker}}</td>
                <td>{{date_recorded}}</td>
                <td>${{price_close}}</td> 
                <td>
                    <a href="#update">
                        <button id="editBtn{{id}}" class="btn btn-info" onclick="updateStockForm({{id}})">
                            <i class="fas fa-edit"></i>
                        </button>
                    </a>
                    <button class="btn btn-danger" onclick="deleteStock({{id}})">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr> 
        {{/each}} 
    </tbody> 
</table> 

