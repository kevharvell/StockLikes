<h1>Twitter Pages</h1>
<h3>Add a new gaming company Twitter Page:</h3>
<form id="addtwitter" action="/twitters" method="post">
    Gaming Company: <select class="m-2" name="gaming_companyInput" required>
        {{#each gaming_company}}
            <option value="{{id}}">{{comp_name}}</option>
        {{/each}}
    </select> <br>
    Company Twitter URL: <input type="text" id="urlInput" class="m-2" name="urlInput" placeholder="EX: https://twitter.com/NintendoAmerica" size="50"> <br>
    Date: <input type="date" class="m-2" name="dateInput" required><br>
    <strong>Buzz Factor will be found automagically based on the Twitter URL provided above.</strong><br>
    <br>
    <input type="submit" value="Submit">
</form>

<hr/>
<div id="update" class="hidden">
    <a id="#update">
    <h3>Update Twitter</h3>
    <form id="updateTwitter" method="post">
        Gaming Company: <select class="m-2" id="companyUpdate" name="gaming_companyInput" required>
            {{#each gaming_company}}
                <option value="{{id}}">{{comp_name}}</option>
            {{/each}}
        </select> <br>
        Company Twitter URL: <input type="text" id="urlUpdate" class="m-2" name="urlInput" placeholder="EX: https://twitter.com/NintendoAmerica" size="50"> <br>
        Date: <input type="date" id="dateUpdate" class="m-2" name="dateInput" required><br>
        <br>
        <input type="submit" value="Update" />
        <button type="button" id="cancelUpdate" onClick="hideUpdate()">Cancel</button>
    </form>
</div>

<hr/>
<h3>Current Twitter Pages:</h3>
<table class="table table-dark bg-secondary">
    <thead> 
        <th>Company Name</th> 
        <th>URL</th>
        <th>Date</th>
        <th>Buzz Factor</th>
    </thead> 
    <tbody> 
        {{#each twitter}} 
            <tr id="tr{{id}}"> 
                <td>{{comp_name}}</td>
                <td><a href="{{url}}" id="tbl-link" target="_blank">{{url}}</a></td>
                <td>{{date_recorded}}</td>
                <td>{{buzz}}</td> 
                <td>
                    <a href="#update">
                        <button id="editBtn{{id}}" class="btn btn-info" onclick="updateTwitterForm({{id}})">
                            <i class="fas fa-edit"></i>
                        </button>
                    </a>
                    <button class="btn btn-danger" onclick="deleteTwitter({{id}})">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr> 
        {{/each}} 
    </tbody> 
</table> 

