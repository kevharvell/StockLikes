<h1>Games</h1>
<h3>Add a new game:</h3>
<form id="addgame" action="/games" method="post">
    Gaming Company: <select class="m-2" name="gaming_company">
        \{{#each gaming_company}}
            <option value="{{id}}">\{{comp_name}}</option>
        \{{/each}}
    </select> <br>
    Game Name: <input type="text" class="m-2" name="gameName"><br>
    Genre: <select class="m-2" name="genreInput">
        \{{#each genre}}
            <option value="{{id}}">\{{category}}</option>
        \{{/each}}
    </select> <br>
    Release Date: <input type="date" class="m-2" name="date"><br>
    Rating: <input type="number" class="m-2" name="rating" min="0" max="100"><br>
    <br>
    <input type="submit" value="Submit">
</form>
<hr/>
<h3>Current Games:</h3>
<table class="table table-dark bg-secondary">
    <thead> 
        <th>Company Name</th> 
        <th>Game Name</th>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Rating</th>
    </thead> 
    <tbody> 
        \{{#each game}} 
            <tr> 
                <td>\{{companyID}}</td>
                <td>\{{game_name}}</td>
                <td>\{{genre}}</td>
                <td>\{{release_date}}</td>
                <td>\{{rating}}</td> 
                <td>
                    <a class="btn btn-info" href="/games/{{id}}" role="button"><i class="fas fa-edit"></i></a>
                    <button class="btn btn-danger" onclick="deleteCompany({{id}})">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr> 
        \{{/each}} 
    </tbody> 
</table> 

