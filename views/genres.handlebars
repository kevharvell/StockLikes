<h1>Genres</h1>
<h3>Add a new genre:</h3>
<form id="addgenre" action="/genres" method="post">
    Name of Genre: <input type="text" class="m-2" name="category" required><br>
    <br>
    <input type="submit" value="Submit">
</form>
<hr/>
<h3>Current Genres:</h3>
<table class="table table-dark bg-secondary">
    <thead> 
        <th>Genre</th> 
    </thead> 
    <tbody> 
        {{#each genre}} 
        <tr id="tr{{id}}"> 
            <td>{{category}}</td> 
            <td>
                <button id="editBtn{{id}}" class="btn btn-info" onclick="changeGenreForm({{id}})">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="btn btn-danger" onclick="deleteGenre({{id}})">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

